<%= render 'admins/header' %>
<!-- Begin page -->
<div id="wrapper">

  <!-- Top Bar Start -->
  <%= render 'admins/topbar' %>
  <!-- Top Bar End -->


  <!-- ========== Left Sidebar Start ========== -->

  <%= render 'admins/left_sidebar' %>
  <!-- Left Sidebar End -->

  <!-- ============================================================== -->
  <!-- Start right Content here -->
  <!-- ============================================================== -->
  <div class="content-page">
    <!-- Start content -->
    <div class="content">
      <div class="container">

        
        <div class="row">
        <% @banks.each do |bank| %>
          <div class="col-sm-6 col-md-6 col-lg-4">
            <div class="widget-bg-color-icon card-box">
              <div class="bg-icon bg-icon-pink pull-right">
                <i class="md md-favorite-outline text-pink"><%= bank.name[0] %></i>
              </div>
              <div class="text-left">
                <h4><p class="text-dark"><%= bank.name %></p></h4>
                <p class="text-muted"><%= bank.registration_no %></p>
                <p class="text-muted"><%= bank.email %></p>
                <p class="text-muted"><%= bank.bank_website %></p>
              </div>
              <div class="clearfix"></div>
            </div>
          </div>
          <% end %>
        </div>
      </div>
      <%= render 'admins/footer' %>
