<p id="notice"><%= notice %></p>

<h1>Listing Banks</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Bank type</th>
      <th>Registration no</th>
      <th>Founded data</th>
      <th>Main service</th>
      <th>Bank email</th>
      <th>Bank website</th>
      <th>Bank logo url</th>
      <th>Token</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @banks.each do |bank| %>
      <tr>
        <td><%= bank.name %></td>
        <td><%= bank.bank_type %></td>
        <td><%= bank.registration_no %></td>
        <td><%= bank.founded_data %></td>
        <td><%= bank.main_service %></td>
        <td><%= bank.bank_email %></td>
        <td><%= bank.bank_website %></td>
        <td><%= bank.bank_logo_url %></td>
        <td><%= bank.token %></td>
        <td><%= link_to 'Show', bank %></td>
        <td><%= link_to 'Edit', edit_bank_path(bank) %></td>
        <td><%= link_to 'Destroy', bank, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

