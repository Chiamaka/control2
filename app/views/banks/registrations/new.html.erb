        <!-- Begin page -->
        <div id="wrapper">

              <div class="account-pages"></div>
            <!-- Top Bar Start -->
            <div class="topbar">              
              <%= render 'layouts/header_public' %>
            </div>
  
          
            <!-- ========== Left Sidebar Start ========== -->
          
                       <!-- Left Sidebar End -->
  
            <!-- ============================================================== -->
            <!-- Start right Content here -->
            <!-- ============================================================== -->

            <div class="content-page">
                <!-- Start content -->
                <div class="content">
                    <div class="container">

                      <!-- INJECT DASHBOARD VIEW  -->
    
<div class="row">

            <div class="col-sm-10">

                <div class="wrapper-page signup-signin-page">
                    <div class="card-box">
                        <div class="panel-heading">
                            <h3 class="text-center"> <strong class="text-custom">BANK <i class="md md-album"></i> REGISTRATION </strong></h3>
                        </div>

                          <%= devise_error_messages! %>

                        <%= form_for(resource, as: resource_name, url: registration_path(resource_name),:html => {:class => 'form-horizontal m-t-20'}) do |f| %>

                        
        
                        <div class="panel-body">
                          <div class="row">
                                <div class="col-lg-6">
                                <h3></h3>
                                </div>                             
                         </div>


                            <div class="row">
                                <div class="col-lg-6">
                                    <div class="p-20">
                                        
                                           <div class="input-group m-t-10">
                                                  <%= f.text_field :name, autofocus: true, :class=>"form-control", :placeholder=>"Name" %>
                                                <span class="input-group-addon"><i class="md  md-account-circle"></i></span>
                                              </div>
                    

                    
                                            <div class="input-group m-t-10">
                                                  <%= f.email_field :email, autofocus: true, :class=>"form-control", :placeholder=>"Email" %>
                                                <span class="input-group-addon"><i class="fa fa-envelope-o"></i></span>
                                              </div>
                                             
                                                                
                                            <div class="input-group m-t-10">
                                            <%= f.password_field :password, autocomplete: "off", :class=>"form-control", :placeholder=>"Password"%>
                                                <span class="input-group-addon"><i class="md md-vpn-key"></i></span>
                                              </div>

                                                                
                                            <div class="input-group m-t-10">
                                                <%= f.password_field :password_confirmation, autocomplete: "off", :class=>"form-control", :placeholder=>"Password Confirmation"%>
                                                <span class="input-group-addon"><i class="md md-vpn-key"></i></span>
                                              </div>

                                           
                    
                                            <div class="input-group m-t-10">
                                                  <%= f.text_field :registration_no, autofocus: true, :class=>"form-control", :placeholder=>"Registration No" %>
                                                <span class="input-group-addon"><i class="md md-settings-cell"></i></span>
                                              </div>
                    
                                            <div class="input-group m-t-10">
                                                  <%= f.text_field :bank_website, autofocus: true, :class=>"form-control", :placeholder=>"Website Address" %>
                                                <span class="input-group-addon"><i class="md md-public"></i></span>
                                              </div>
                                            
                                    </div>
                                </div>
                                
                                
                                <div class="col-lg-6">
                                    <div class="p-20">                                            
                                            <div class="form-group ">
                                                <div class="col-xs-12">
                                                        <%= f.select(:bank_type, 
                                                          options_for_select([
                                                            ["Bank Type", ], 
                                                            ["Commercial Bank", "Commercial Bank"], 
                                                            ["Community Bank", "Community Bank"], 
                                                            ["Mortgate Bank", "Mortgate Bank"]
                                                            ]), {}, { :class => "form-control"})
                                                        %>
                                                </div>
                                            </div>
                    
                                            <div class="input-group m-t-10">
                                                  <%= f.text_field :founded_data, autofocus: true, :class=>"form-control", :placeholder=>"Founded " %>
                                                <span class="input-group-addon"><i class="md md-star"></i></span>
                                              </div>

                                        <div class="form-group m-t-10">
                                            <input type="file" class="filestyle" data-placeholder="No file" id="filestyle-9" tabindex="-1" style="position: absolute; clip: rect(0px 0px 0px 0px);">
                                            <div class="bootstrap-filestyle input-group">
                                               <input type="text" class="form-control " style="margin-left:8px"      placeholder="No file" disabled="">  <span class="group-span-filestyle input-group-btn" tabindex="0">
                                                   <label for="filestyle-9" class="btn btn-default ">
                                                   <span class="md md-folder-open"></span> 
                                                   <span class="buttonText">Upload Bank Logo</span></label></span></div>
                                                    </div>


                    
                                            <div class="form-group text-right m-t-20 m-b-0">
                                                <div class="col-xs-12" style="margin-top:20px">
                                                    <button class="btn btn-primary text-uppercase waves-effect waves-light w-sm" type="submit">
                                                       Create 
                                                    </button>
                                                </div>
                                            </div>
                                            
                                       

                                    </div>
                                </div>
                              

                            </div>
                            
                        </div>
                    <% end %>
                    </div>
          
                </div>

            </div>

        </div>

        
                    </div> <!-- container -->

                </div> <!-- content -->


          <footer class="footer text-right">
                   <%= render 'layouts/footer' %>
                   
         </footer>

            </div>

             <!-- Right Sidebar -->
            <div class="side-bar right-bar nicescroll">

