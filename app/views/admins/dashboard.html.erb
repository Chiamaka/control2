          </div>
          <div class="text-right">
              <h3 class="text-dark"><b class="counter"><%= @number_of_banks %></b></h3>
              <%= link_to "Banks", banks_display_path, class: "text-muted" %>
          </div>
          <div class="clearfix"></div>
      </div>
  </div>

  <div class="col-md-6 col-lg-4">
    <div class="widget-bg-color-icon card-box">
       <div class="bg-icon bg-icon-purple pull-left">
           <i class="fa fa-file-text-o text-purple"></i>
      </div>
      <div class="text-right">
          <h3 class="text-dark"><b class="counter"><%= @number_of_transactions %></b></h3>
