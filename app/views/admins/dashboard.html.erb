       <div class="container">

          <!-- Page-Title -->
          <div class="row">
             <div class="col-sm-12">
                <h4 class="page-title">Admin Dashboard</h4>
                <p class="text-muted page-title-alt">Welcome <%= current_admin.email%></p>
            </div>
        </div>
        
        <div class="row">
         <div class="col-md-6 col-lg-4">
