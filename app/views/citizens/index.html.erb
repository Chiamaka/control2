<%= render 'admins/header' %>  
<p id="notice"><%= notice %></p>

<div id="wrapper">

  <!-- Top Bar Start -->
  <%= render 'admins/topbar' %>
  <!-- Top Bar End -->


  <!-- LEFT SIDEBAR  -->

  <%= render 'admins/left_sidebar' %>

  <div class="content-page">
    <!-- Start content -->
    <div class="content">
     <div class="container">
      <div class="row">
        <div class="col-sm-12">
          <div class="card-box">
            <table id="datatable" class="table table-striped table-bordered">
              <center><h1>Listing Citizens</h1></center>


              <thead>
                <tr>
                  <th>Name</th>
                  <th>Phone num</th>
                  <th>Email</th>
                  <th>Address</th>
                  <th>National Id</th>
                  <th>Bank</th>
                  <!-- <th colspan="4"></th> -->
                </tr>
              </thead>

              <tbody>
                <% @citizens.each do |citizen| %>
                <tr>
                  <td><%= citizen.name %></td>
                  <td><%= citizen.phone_num %></td>
                  <td><%= citizen.email %></td>
                  <td><%= citizen.address %></td>
                  <td><%= citizen.national_id %></td>
                  <% @data = citizen.citizen_bank_data %>
                  <% if !@data.blank? %>
                    <% @bank_id = @data.find(citizen.id).bank_id %>
                    <td><%= Bank.find(@bank_id).name%></td>
                  <% else %>
                    <td>--------</td>
                  <% end %>
                  <!-- <td><%= link_to 'Show', citizen %></td>
                  <td><%= link_to 'Edit', edit_citizen_path(citizen) %></td>
                  <td><%#= link_to 'Destroy', citizen, method: :delete, data: { confirm: 'Are you sure?' } %></td> -->
                </tr>
                <% end %>
              </tbody>
            </table>
          </div>
        </div>



