


       <!-- Begin page -->
        <div id="wrapper">

              <div class="account-pages"></div>
            <!-- Top Bar Start -->
            <div class="topbar">              
              <%= render 'layouts/header_public' %>
            </div>
  
          
            <!-- ========== Left Sidebar Start ========== -->
            <div class="left side-menu">
              <%= render 'layouts/sidebar' %>
            </div>
                       <!-- Left Sidebar End -->
  
            <!-- ============================================================== -->
            <!-- Start right Content here -->
            <!-- ============================================================== -->

            <div class="content-page">
                <!-- Start content -->
                <div class="content">
                    <div class="container">

                      <!-- INJECT DASHBOARD VIEW  -->
                                <p id="notice"><%= notice %></p>
                                
                                <!-- Page-Title -->
                                 <div class="row">
                                      <div class="col-sm-12">
                                        <div class="card-box">
                                          <table id="datatable" class="table table-striped table-bordered">
                                            <center><h1>Listing Transactions</h1></center>

                                            <thead>
                                              <tr>
                                                <th>Transaction Type</th>
                                                <th>Transaction Amount</th>
                                                <th>Account Balance</th>
                                                <th>Bank</th>
                                                <th>Citizen</th>
                                                <!-- <th colspan="3"></th> -->
                                              </tr>
                                            </thead>

                                            <tbody>
                                              <% @transactions.each do |transaction| %>
                                              <tr>
                                                <td><%= transaction.transaction_name %></td>
                                                <td><%= number_to_currency(transaction.transaction_amount, unit: "GHS") %></td>
                                                <td><%= transaction.account_balance %></td>
                                                <td><%= transaction.bank.name %></td>
                                                <td><%= transaction.citizen.national_id %></td>
                                                <!-- <td><%= link_to 'Show', transaction %></td>
                                                <td><%= link_to 'Edit', edit_transaction_path(transaction) %></td>
                                                <td><%= link_to 'Destroy', transaction, method: :delete, data: { confirm: 'Are you sure?' } %></td> -->
                                              </tr>
                                              <% end %>
                                            </tbody>
                                          </table>
                                        </div>
                                      </div>
                                </div>
        
                    </div> <!-- container -->

                </div> <!-- content -->


          <footer class="footer text-right">
                   <%= render 'layouts/footer' %>
                   
         </footer>

            </div>

             <!-- Right Sidebar -->
            <div class="side-bar right-bar nicescroll">

            <!-- ============================================================== -->
            <!-- End Right content here -->
            <!-- ============================================================== -->
            
            </div>
            <!-- /Right-bar -->

        </div>
        <!-- END wrapper -->
      </div>




