<%= render 'admins/header' %>  
<p id="notice"><%= notice %></p>

<div id="wrapper">

  <!-- Top Bar Start -->
  <%= render 'admins/topbar' %>
  <!-- Top Bar End -->


  <!-- LEFT SIDEBAR  -->

  <%= render 'admins/left_sidebar' %>

  <div class="content-page">
    <!-- Start content -->
    <div class="content">
     <div class="container">
      <div class="row">
        <div class="col-sm-12">
          <div class="card-box">
            <table id="datatable" class="table table-striped table-bordered">
              <center><h1>Listing Transactions</h1></center>

              <thead>
                <tr>
                  <th>Transaction Type</th>
                  <th>Transaction Amount</th>
                  <th>Account Balance</th>
                  <th>Bank</th>
                  <th>Citizen</th>
                  <!-- <th colspan="3"></th> -->
                </tr>
              </thead>

              <tbody>
                <% @transactions.each do |transaction| %>
                <tr>
                  <td><%= transaction.transaction_name %></td>
                  <td><%= transaction.transaction_amount %></td>
                  <td><%= transaction.account_balance %></td>
                  <td><%= transaction.bank.name%></td>
                  <td><%= transaction.citizen.national_id %></td>
                  <!-- <td><%= link_to 'Show', transaction %></td>
                  <td><%= link_to 'Edit', edit_transaction_path(transaction) %></td>
                  <td><%= link_to 'Destroy', transaction, method: :delete, data: { confirm: 'Are you sure?' } %></td> -->
                </tr>
                <% end %>
              </tbody>
            </table>
          </div>
        </div>

        <br>

       <!--  <%= link_to 'New Transaction', new_transaction_path %> -->
        <%= render 'admins/footer'%>
